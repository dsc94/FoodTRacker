<android.support.v7.widget.CardView
    android:layout_width="300dp"
    android:layout_height="300dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="43dp"
    android:layout_marginTop="1dp"
    android:animateLayoutChanges="true"
    card_view:cardCornerRadius="20dp"
    card_view:theme="@style/AlertDialog.AppCompat.Light"
    card_view:cardElevation="50dp"
    android:id="@+id/cv"
    android:layout_gravity="left|center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout2"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/food_name"
            android:text="Enter the food you have taken"
            android:textColor="@color/tabsScrollColor"
            android:textSize="20dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/food_name"
            android:id="@+id/edittext1"
            />
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext1"
            android:layout_marginTop="20dp"
            android:textColor="@color/tabsScrollColor"
            android:text="Enter quantity taken"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textview2"
            android:id="@+id/edittext2"/>
        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Units"
            android:layout_above="@+id/edittext2"
            android:layout_alignRight="@+id/food_name"
            android:layout_alignEnd="@+id/food_name"
            android:textColor="@color/tabsScrollColor"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edittext3"
            android:layout_alignBottom="@+id/edittext2"
            android:layout_alignLeft="@+id/textview3"
            android:layout_alignStart="@+id/textview3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0066ff"
            android:text="ADD ITEM"
            android:textSize="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="200dp"
            android:clickable="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>